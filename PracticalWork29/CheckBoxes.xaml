<UserControl x:Class="PracticalWork29.CheckBoxes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PracticalWork29"
             mc:Ignorable="d" d:DesignWidth="100" d:DesignHeight="25">
    <Grid>
        <Border CornerRadius="5" x:Name="brd1">
            <CheckBox Unchecked="rb1_Unchecked" Foreground="{DynamicResource Text}" 
                      x:Name="rb1" Content="{Binding SetCat}" Margin="5" Checked="rb1_Checked"/>
        </Border>
    </Grid>
</UserControl>
